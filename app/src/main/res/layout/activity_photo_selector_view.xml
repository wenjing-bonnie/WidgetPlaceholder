<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:psv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.widgetplaceholder.GridView
        android:id="@+id/gv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        psv:horizontalSpacing="50px"
        psv:numColumns="4"
        psv:verticalSpacing="50px" />

    <com.android.widgetplaceholder.GridLayout
        android:id="@+id/gv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        psv:horizontalSpacing="50px"
        psv:numColumns="4"
        psv:verticalSpacing="50px" />

</LinearLayout>